%li
  %label.custom-control.custom-checkbox.d-flex.align-items-center
    = check_box_tag 'signup[candidate_uids][]', candidate.uid, signup.candidate_uids.include?(candidate.uid), class: 'custom-control-input'
    = image_tag candidate.avatar, alt: candidate.name
    %svg{width: 40, height: 40, viewbox: '0 0 40 40'}
      %path{d: 'M10 10 L30 30 M30 10 L10 30'}
    %span.name
      %b= candidate.screen_name
      %small= candidate.name
    %span.custom-control-indicator
